<div class="port-section" id="port-folio">
    <div class="container">
        <div class="row">
            <div class="port-head text-center col-md-12">
                <h2>
                    <strong>Portfolio</strong>
                </h2>
            </div>
        </div>
        <div>
            <div class="row">
                {% for project_item in projectItems %}
                <div class="single-port col-sm-4">
                    <div class="relative">
                        <a data-toggle="modal" data-target={{project_item["id"]}}>
                            <div style="cursor: pointer;">
                                <img src={{project_item["project_image"]}} alt={{project_item["alt"]}} class="image img-fluid"/>
                            </div>
                        </a>
                    </div>
                    <div class="text-center p-title">
                        <h4>{{project_item["project_title"]}}</h4>
                        <div class="p-inner-des">{{project_item["skill_stack"]}}</div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>    
</div>

{% for modalItem in modalItems %}
<div class="modal fade" id={{modalItem["id"]}} tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                <div class="row">
                    <div class="col-12 px-5 pt-5 text-center">
                        <h5 class="font-weight-normal mb-3">{{modalItem["header"]}}</h5>
                        <p class="text-muted">{{modalItem["words"]}}</p>
                        <ul class="list-unstyled font-small mt-5">
                            <li>
                                <p class="text-uppercase mb-2"><strong>Skills</strong></p>
                                <p class="text-muted mb-4">{{modalItem["skills"]}}</p>
                            </li>
                        </ul>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <a  class="btn btn-success">View Source Code</a>
                    <a  class="btn btn-info">View Site</a>
                </div>
            </div>
        </div>
</div>
{% endfor %}